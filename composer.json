{
    "name": "behat/symfony2-extension",
    "type": "behat-extension",
    "description": "Symfony2 framework extension for Behat",
    "keywords": ["symfony", "framework", "bdd"],
    "homepage": "http://behat.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com"
        },
        {
            "name": "Christophe Coevoet",
            "email": "stof@notk.org"
        },
        {
            "name": "Theodore R. Smith",
            "email": "theodore@phpexperts.pro"
        }
    ],

    "require": {
        "php":                       ">=5.6",
        "behat/behat":               "^3.6.0",
        "symfony/framework-bundle":  "3.*|4.*"
    },

    "require-dev": {
        "phpexperts/dockerize":                     "*",
        "behat/mink":                               "*",
        "behat/mink-extension":                     "*",
        "symfony/symfony":                          "3.*|4.*",
        "friends-of-behat/mink-browserkit-driver":  "^1.1.0",
        "phpspec/phpspec":                          "2.*|3.*|4.*",
        "phpunit/phpunit":                          "5.*"
    },

    "autoload": {
        "psr-0": { "Behat\\Symfony2Extension": "src/" }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.1.x-dev"
        }
    }
}
