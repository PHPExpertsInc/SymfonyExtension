{
    "name": "csid/symfony-extension",
    "type": "behat-extension",
    "description": "Symfony 3-7 framework extension for Behat",
    "keywords": ["symfony", "framework", "bdd", "behat"],
    "homepage": "http://behat.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com"
        },
        {
            "name": "Christophe Coevoet",
            "email": "stof@notk.org"
        },
        {
            "name": "Theodore R. Smith",
            "email": "theodore@phpexperts.pro"
        }
    ],

    "require": {
        "php":                       ">=5.6",
        "behat/behat":               "^3.6",
        "symfony/framework-bundle":  "3.*|4.*|5.*|6.*|7.*"
    },

    "require-dev": {
        "phpexperts/dockerize":                     "*",
        "behat/mink":                               "*",
        "friends-of-behat/mink-extension":          "*",
        "symfony/symfony":                          "4.*|5.*|6.*|7.*",
        "friends-of-behat/mink-browserkit-driver":  "*",
        "phpspec/phpspec":                          "3.*|4.*|5.*|6.*|7.*",
        "phpunit/phpunit":                          "5.*|7.*|8.*|9.*"
    },

    "autoload": {
        "psr-0": { "Behat\\Symfony2Extension": "src/" }
    }

}
